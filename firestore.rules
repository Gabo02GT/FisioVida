rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usuarios: cada uno lee/escribe sus datos, cualquier usuario autenticado puede leer todos
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Plans: acceso total para usuarios autenticados
    match /plans/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Routines: acceso total para usuarios autenticados
    match /routines/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Appointments: acceso total para usuarios autenticados
    match /appointments/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Reports: acceso total para usuarios autenticados
    match /reports/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Invitations: permitir lectura para validar invitación (sin autenticación)
    // y escritura solo para usuarios autenticados
    match /invitations/{document=**} {
      allow read: if true; // Permitir lectura pública para validar invitaciones
      allow write: if request.auth != null; // Solo usuarios autenticados pueden crear invitaciones
    }

    // Cualquier otra colección: acceso total para usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

